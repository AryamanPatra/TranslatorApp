<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.elements.MainActivityFragments.TextFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/from_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fontFamily="@font/inika"
android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:clickable="true"
        android:gravity="start|top"
        android:padding="15dp"
        android:text="From"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <EditText
        android:id="@+id/to_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fontFamily="@font/inika" android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:clickable="true"
        android:gravity="start|top"
        android:padding="15dp"
        android:text="To"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.412" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="29dp"
        app:cardElevation="11dp"
        android:backgroundTint="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/from_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:backgroundTint="@color/theme_blue"
                android:fontFamily="@font/inria_sans"
                android:letterSpacing="0.1"
                android:clickable="true"
                android:text="English" />

            <ImageView
                android:layout_width="41dp"
                android:layout_height="42dp"
                android:layout_margin="@dimen/_8sdp"
                app:tint="@color/dark_grey"
                android:src="@drawable/exchange_alt" />

            <Button
                android:id="@+id/to_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:textColor="@color/mid_grey"
                android:fontFamily="@font/inria_sans"
                android:letterSpacing="0.1"
                android:text="Punjabi" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/from_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintBottom_toTopOf="@+id/from_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/to_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_textbox" />


</androidx.constraintlayout.widget.ConstraintLayout>